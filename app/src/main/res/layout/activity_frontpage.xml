<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Banner Image layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_frontpage_BannerImage"
        android:layout_above="@+id/tv_frontpage_slogan1"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/frontpage_image1"
            android:scaleType="fitXY"
            android:id="@+id/iv_bannerImage"/>
    </LinearLayout>

    <!-- Skip Login on top right-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Skip Login"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:padding="12dp"
        android:id="@+id/tv_frontpage_skipLogin"/>

    <!-- Slogan on front page-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_frontpage_socialLoginButtons"
        android:text="Find your dream sports with and \nstay fit"
        android:textSize="18dp"
        android:textColor="@color/colorDarkGray"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/tv_frontpage_slogan1"/>

    <!-- Social Login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/ll_frontpage_loginSignupButtons"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_frontpage_socialLoginButtons">
        <!-- Facebook -->
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/fb_icon"
            android:background="@drawable/custombutton_facebook"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="9dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ib_frontpage_facebook"/>
        <!-- Google.plus -->
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/googleplus_icon"
            android:background="@drawable/custombutton_googleplus"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="9dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/ib_frontpage_googleplus"/>
    </LinearLayout>

    <!-- Signup/Login Buttons at the bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_frontpage_loginSignupButtons">
        <!-- Sign up button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="SIGN UP"
            android:textColor="@color/colorGray"
            android:textSize="18dp"
            android:background="@drawable/custombutton_gray_frontpage"
            android:id="@+id/bt_frontpage_signup"/>

        <!-- Sign up button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:text="LOGIN"
            android:textColor="@color/colorGray"
            android:textSize="18dp"
            android:background="@drawable/custombutton_gray_frontpage"
            android:id="@+id/bt_frontpage_login"/>
    </LinearLayout>

</RelativeLayout>